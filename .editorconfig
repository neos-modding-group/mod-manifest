# https://EditorConfig.org
root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[*.json]
indent_style = space
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2

[*.sh]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false
